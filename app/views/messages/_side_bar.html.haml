.chat-side
  .side-bar__user-name
    .top-items
      %p.top-items__name 
        = current_user.name
      .top-items__icons 
        = link_to new_group_path, class: "Contents__btn1" do
          <i class='far fa-edit'></i>
        = link_to edit_user_path(current_user), class: "Contents__btn2" do
          <i class='fas fa-cog'></i>
          
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) , class:"hoge" do
          %h2.group-list__name
            = group.name
          %p.group-list__text 
            = group.show_last_message
          %h2.group-list__name
            = group.name
          %p.group-list__text 
            = group.show_last_message
    
    
